{
  "compilerOptions": {
    "outDir": "./dist", // Directory for compiled output
    "rootDir": "./src", // Directory containing source files
    "target": "ES2022", // Enable modern JavaScript features
    "module": "ESNext", // Required for `import.meta` and top-level `await`
    "moduleResolution": "Node", // Resolve modules in Node.js style
    "resolveJsonModule": true, // Enable importing JSON files
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitive imports
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checks for node_modules
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
